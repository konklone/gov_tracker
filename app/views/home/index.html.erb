<h1>Guv Watch</h1>

<% unless current_user %>
  <h3>Welcome guest</h3>
  <p><%= link_to "Sign In", '/users/sign_in' %></p>
  <p><%= link_to "Register", '/users/sign_up' %></p>
<% else %>
  <h3>Hello <%=current_user.name %></h3>
  <p><%= link_to "Edit Profile", '/users/edit' %></p>
  <p><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></p>

<%= render 'home/sidebar' %>

<%= render '/home/upcoming' %>

<% end %>