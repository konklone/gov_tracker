<div id="upcoming">
  <h4 class="section_title">Upcoming Legislation</h4>
  <table>
    <tr>
      <th>Chamber</th>
      <th>Bill #</th>
      <th>Context</th>
      <th>Link</th>
    </tr>
    <% @upcoming.each do |bill| %>
      <tr>
        <td class="capitalize"><%= bill[:chamber] %></td>
        <td class="uppercase td_size"><%= bill[:bill_id] %></td>
        <td><% if bill[:context].nil? %>
              No summary available.
            <% else %>
              <%= bill[:context] %>
            <% end %></td>
        <td><a href=<%= bill[:url] %> target="_blank">Link</a></td>
      </tr>
    <% end %>
  </table>
</div>