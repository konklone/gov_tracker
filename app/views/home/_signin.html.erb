<div id="sign_in"> 
  <% unless current_user %>
    <h3 class="greeting">Welcome guest <%= link_to "Sign In", '/users/sign_in', :class =>"auth_link" %>  <%= link_to "Register", '/users/sign_up', :class =>"auth_link" %></h3>
  <% else %>
    <h3 class="greeting">Hello <%=current_user.name %><%= link_to "Edit Profile", '/users/edit' , :class => "auth_link"%>  <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class=>"auth_link" %></h3> 
  <% end %>
</div>